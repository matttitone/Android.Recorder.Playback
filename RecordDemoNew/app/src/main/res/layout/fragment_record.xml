<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamsix.recorddemo.audiorecordtest.RecordListActivity">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selector_icon_rename"
        android:id="@+id/btnRename"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selector_icon_stop"
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/selector_icon_return"
        android:id="@+id/btnReturn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"/>



    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnPlay"
        android:background="@drawable/selector_icon_play"
        android:layout_alignTop="@+id/btnRename"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnPause"
        android:background="@drawable/selector_icon_pause"
        android:layout_alignTop="@+id/btnRename"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnDelete"
        android:background="@drawable/selector_icon_delete"
        android:layout_alignTop="@+id/btnRename"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnInfo"
        android:background="@drawable/selector_icon_info"
        android:layout_alignTop="@+id/btnRename"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/btnRename"
        android:layout_marginBottom="15dp"
        android:text="00:00:00"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/tvStartTime"
        android:text="00:00:00"
        android:visibility="invisible"
        />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvNumber"
        android:layout_above="@+id/tvStartTime"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignBottom="@+id/tvStartTime"
        android:layout_toRightOf="@+id/tvStartTime"
        android:layout_toLeftOf="@+id/tvEndTime"
        android:visibility="invisible"
        />
</RelativeLayout>
